<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kandidati za Konkurs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light text-dark">
<header class="bg-primary text-white py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <a href ="/admin/" style="text-decoration: none; color: white"><h1>HR Management Admin</h1></a>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link text-white">Dashboard</a></li>
                <li class="nav-item"><a href="/logout" class="nav-link text-white">Logout</a></li>
            </ul>
        </nav>
    </div>
</header>

<div class="container my-5">
    <h2 class="text-secondary mb-4">Lista ocjenjenih kandidata</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Email</th>
            <th>Ocjena</th>
            <th>Komentar</th>
        </tr>
        </thead>
        <tbody>
        <% kandidati.forEach((kandidat, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= kandidat.ime %></td>
                <td><%= kandidat.prezime %></td>
                <td><%= kandidat.email %></td>
                <td><%= kandidat.ocjena !== null ? kandidat.ocjena : 'N/A' %></td>
                <td><%= kandidat.komentar || 'Nema komentara' %></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<div style="height: 500px;"></div>
<footer class="bg-dark text-light py-4">
    <div class="container text-center">
        <p>&copy; 2024 HR Management. All Rights Reserved.</p>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
