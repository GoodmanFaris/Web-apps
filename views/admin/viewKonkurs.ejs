<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Human Resource Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>

<body>
<header class="bg-primary text-white py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <a href ="/admin/" style="text-decoration: none; color: white"><h1>HR Management Admin</h1></a>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link text-white">Dashboard</a></li>
                <li class="nav-item"><a href="/logout" class="nav-link text-white">Logout</a></li>
            </ul>
        </nav>
    </div>
</header>
<div class="container my-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Konkurs Details</h2>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <h5 class="text-primary">Naziv:</h5>
                <p class="fs-5"><%= konkurs[0].naziv %></p>
            </div>
            <div class="mb-3">
                <h5 class="text-primary">Datum Isteka:</h5>
                <p class="fs-5"><%= new Date(konkurs[0].datum_isteka).toLocaleDateString() %></p>
            </div>
            <div class="mb-3">
                <h5 class="text-primary">Opis:</h5>
                <div class="p-3 border rounded bg-light">
                    <p class="mb-0"><%= konkurs[0].opis %></p>
                </div>
            </div>

            <!-- Kandidati Section -->
            <div class="mt-4">
                <h3 class="text-primary">Prijavljeni Kandidati</h3>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-primary">
                        <tr>
                            <th>#</th>
                            <th>Ime</th>
                            <th>Prezime</th>
                            <th>Email</th>
                            <th>Akcija</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% if (kandidati.length > 0) { %>
                            <% kandidati.forEach((kandidat, index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= kandidat.ime %></td>
                                    <td><%= kandidat.prezime %></td>
                                    <td><%= kandidat.email %></td>
                                    <td>
                                        <a href="/admin/view/konkurs/<%= konkurs[0].id %>/kandidat/<%= kandidat.kandidat_id %>"
                                           class="btn btn-outline-primary btn-sm">
                                            Pregled
                                        </a>
                                        <% if (kandidat.ocijenjen === 1) { %>
                                            <span class="badge bg-info text-white ms-2">Ocijenjen</span>
                                        <% } %>
                                        <span class="ms-2 text-secondary"><%= kandidat.statusk %></span>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center text-muted">Nema prijavljenih kandidata.</td>
                            </tr>
                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>



            <div class="text-end">
                <a href="/admin" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Back to Admin Panel
                </a>
            </div>
        </div>
    </div>
</div>


<footer class="bg-dark text-white py-3">
    <div class="container text-center">
        <p>&copy; 2024 Human Resource Management System. All rights reserved.</p>
    </div>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
