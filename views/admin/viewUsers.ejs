<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Messages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<header class="bg-primary text-white py-3">
    <div class="container d-flex justify-content-between align-items-center">
        <a href ="/admin/" style="text-decoration: none; color: white"><h1>HR Management Admin</h1></a>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link text-white">Dashboard</a></li>
                <li class="nav-item"><a href="/logout" class="nav-link text-white">Logout</a></li>
            </ul>
        </nav>
    </div>
</header>



<div class="container my-5">
    <h1 class="text-primary text-center mb-4"><%= title %></h1>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <label for="sortOptions" class="form-label">Sortiraj po:</label>
                <select id="sortOptions" class="form-select mb-3">
                    <option value="" selected disabled>Izaberite opciju</option>
                    <option value="naziv_kompanije" onclick="I();">Imenu</option>
                    <option value="datum_isteka" onclick="P();">Prezimenu</option>
                </select>
            </div>
        </div>
    </div>
    <!-- First Table -->
    <table class="table table-striped table-hover">
        <thead class="table-primary">
        <tr>
            <th scope="col">Ime</th>
            <th scope="col">Prezime</th>
            <th scope="col">Email</th>
            <th scope="col">Profil</th>
        </tr>
        </thead>
        <tbody>
        <% if (kandidati && kandidati.length > 0) { %>
            <% kandidati.forEach(kandidat => { %>
                <tr>
                    <td><%= kandidat.ime %></td>
                    <td><%= kandidat.prezime %></td>
                    <td><%= kandidat.email %></td>
                    <td>
                        <a class="btn btn-sm btn-primary" onclick="ViewKandidat(<%= kandidat.id%>);">Pogledaj</a>
                    </td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4" class="text-center">Nema dostupnih kandidata.</td>
            </tr>
        <% } %>
        </tbody>
    </table>

    <!-- Second Table -->
    <h2 class="text-secondary text-center mt-5">Ocjene Kandidata</h2>
    <table class="table table-striped table-hover">
        <thead class="table-info">
        <tr>
            <th scope="col">Ime</th>
            <th scope="col">Prezime</th>
            <th scope="col">Ocjena</th>
        </tr>
        </thead>
        <tbody>
        <% if (ocjene && ocjene.length > 0) { %>
            <% ocjene.forEach(ocjena => { %>
                <tr>
                    <td><%= ocjena.ime %></td>
                    <td><%= ocjena.prezime %></td>
                    <td><%= ocjena.ocjena %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan="4" class="text-center">Nema dostupnih ocjena.</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</div>

<script>
    function ViewKandidat(id) {
        window.location.href = "/admin/view/user/" + id;
    }
    function I(){
        window.location.href="/admin/all-users/i";
    }

    function P(){
        window.location.href="/admin/all-users/p";
    }
</script>
</body>
</html>
